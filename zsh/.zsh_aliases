# Basic commands
alias cls='clear'
alias ll='ls -l'
alias la='ls -a'
alias rr="rm -rf"
alias install='sudo apt install'

# Run apps
alias vs='code'
alias brave='brave-browser'

# Git aliases
alias gcl='git clone'
alias gi='git init'
alias gs='git status'
alias ga='git add'
alias gaa='git add .'
alias gc='git commit -m'
alias gco='git checkout'
alias gb='git branch'
alias gp='git push origin master'

# Run Python
alias ptest='python3 -m pytest'

# Compile C
alias gcval='gcc -Wall -Wextra -Werror -o ejecutable $1 && valgrind ./ejecutable'

# Configure zsh
alias reload='cd ~; clear; source ~/.zshrc'
alias ezsh='code ~/.zshrc'

# System information
alias fetch='neofetch'